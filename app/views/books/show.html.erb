<p id="notice"></p>

<div>
 <%= flash[:success] %>
</div>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
   <%= render 'list', user: @user, book: @book %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>

    <table>
     <tbody>
      <tr>
       <td>
       <%= image_tag @book2.user.get_profile_image(100,100) %> <br>
       <%= link_to @user.name, user_path(@user.id) %>
       </td>

       <td>
       <%= link_to @book2.title, book_path(@book2.id)%>
       </td>

       <td>
       <%= @book2.body %>
       </td>

       <td>
       <% if @book2.user == current_user %>
       <%= link_to "Edit", edit_book_path(@book2.id), class:"btn btn-sm btn-success" %>
       <%= link_to "Destroy", book_path(@book2.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
       <% end %>
       </td>
      </tr>
     </tbody>
  </table>
  </div>
 </div>
</div>